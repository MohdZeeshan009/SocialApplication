<link rel="stylesheet" href="/css/home.css">
<nav id="nav-bar">
    <h1>
        Codeial / <%= title %>
    </h1>
</nav>


<section id="feed-post">
    <h3>Post</h3>
    <%if(locals.user){%>
        <form action="./post/create" id="new-post-form" method="POST">
            <textarea name="content" id="" cols="30" rows="3" placeholder="Text Here....." required> </textarea>
            <input type="submit" value="Post">
        </form>
        <%}%>
            <div id="post-list-container">
                <ul>
                    <% for(post of posts){%>
                        <li>
                            <p>
                                <%=post.content%>
                                    <br>
                                    <small>
                                        <%=post.user.name%>
                                    </small>
                            </p>
                            <div id="post-comment-container"> 
                                <%if(locals.user){%>
                                    <form action="/comments/create"  method="POST">
                                        <input type="text" name="content" id="" placeholder="type here to Comment" required>
                                        <input type="hidden" name="post" id="" value="<%= post._id%>">
                                        <input type="submit" value="Add comment">
                                    </form>
                                    <%}%>
                            </div>
                            <div class="post-comment-lists">
                            <ul class="post-comment-<%=user._id%>">
                                <% for(comment of post.comments){%>
                                    <li>
                                        <P><%=comment.content%></P>
                                        <br>
                                        <small>
                                            <%= comment.user.name%>
                                        </small>
                                    </li>
                                    <%}%>
                            </ul>
                        </div>
                        </li>
                        <%}%>
                </ul>


            </div>

</section>